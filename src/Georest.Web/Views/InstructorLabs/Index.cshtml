<h1 class="heading is-size-3 is-bold">Instructor Labs<br /></h1>
<ul>
    @if (ViewBag.InstructorLabs.Count == 0)
    {
        <li>No Labs</li>
    }
    @foreach (var instructorLab in ViewBag.InstructorLabs)
    {
        <li>
            <br />
            <h1 class="heading is-size-4 is-bold">Lab:@instructorLab.Id @instructorLab.Title</h1>
            <a class="button" asp-action="edit" asp-route-id="@instructorLab.Id">Edit</a>
            <a class="button is-danger" asp-action="delete" asp-route-id="@instructorLab.Id" onclick="return confirm('Are you sure you want to delete the lab @instructorLab.Title?')">Delete</a>
        </li>
    }
</ul>
<a asp-controller="InstructorLabs" asp-action="Add" class="button is-primary">Add Lab</a>