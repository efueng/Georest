<h1 class="heading is-size-4 is-bold">Instructors<br /></h1>
<ul>
    @if (ViewBag.Instructors.Count == 0)
    {
        <li>No Instructors</li>
    }
    @foreach (var instructor in ViewBag.Instructors)
    {
        <li>
            @instructor.FirstName @instructor.LastName
            <a class="button" asp-action="edit" asp-route-id="@instructor.Id">Edit</a>
            <a class="button is-danger" asp-action="delete" asp-route-id="@instructor.Id" onclick="return confirm('Are you sure you want to delete @instructor.FirstName @instructor.LastName?')">Delete</a>
        </li>
    }
</ul>
<a asp-controller="Instructors" asp-action="Add" class="button is-primary">Add Instructor</a>