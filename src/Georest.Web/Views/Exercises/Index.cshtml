<h1 class="heading is-size-3 is-bold">Exercises<br /></h1>
<ul>
    @if (ViewBag.Exercises.Count == 0)
    {
        <li>No Exercises</li>
    }
    @foreach (var exercise in ViewBag.Exercises)
    {
        <li>
            <br />
            <h1 class="heading is-size-4 is-bold">@exercise.Id. @exercise.Title<br /></h1>
            @exercise.Body<br />
            <a class="button" asp-action="edit" asp-route-id="@exercise.Id">Edit</a>
            <a class="button is-danger" asp-action="delete" asp-route-id="@exercise.Id" onclick="return confirm('Are you sure you want to delete the exercise @exercise.Title?')">Delete</a>
        </li>
    }
</ul>
<a asp-controller="Exercises" asp-action="Add" class="button is-primary">Add Exercise</a>